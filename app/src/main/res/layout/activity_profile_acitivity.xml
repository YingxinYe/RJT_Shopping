<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileAcitivity">

    <include
        android:id="@+id/profile_toolbar"
        layout="@layout/toolbar"></include>


    <RelativeLayout
        android:id="@+id/profile_info_group"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/purpleblue">

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle"
            android:src="@drawable/winnie" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profile_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <Button
    android:id="@+id/profile_check_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/profile_info_group"
    android:layout_centerHorizontal="true"
    android:layout_marginHorizontal="30dp"
    android:layout_marginTop="30dp"
    android:background="@color/blue_berry"
    android:text="My Order"
    android:textColor="@color/white"
    android:textSize="20dp"
    android:textStyle="bold" />

    <Button
        android:id="@+id/profile_change_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_check_order"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/blue_berry"
        android:text="Change Profile"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@color/blue_berry"
        android:text="Log out"
        android:textColor="@color/white"
        android:textStyle="bold" />
</RelativeLayout>