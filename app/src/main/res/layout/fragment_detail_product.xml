<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DetailProductFragment">

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/detail_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="name"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:paddingLeft="10dp"
        android:id="@+id/detail_product_image"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_below="@+id/detail_product_name" />

    <TextView
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:id="@+id/detail_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_product_name"
        android:layout_toRightOf="@+id/detail_product_image"
        android:text="price" />


    <TextView
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:layout_below="@+id/detail_product_image"
        android:id="@+id/detail_product_description"
        android:text="description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="5dp"
            android:background="@drawable/button1"
            android:text="Add to Cart"
            android:id="@+id/detail_product_add_to_cart_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_margin="5dp"
            android:background="@drawable/button1"
            android:id="@+id/detail_product_buy_now_button"
            android:text="Buy Now"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>



</RelativeLayout>