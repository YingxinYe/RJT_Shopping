<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/yellowborder"
    android:layout_margin="2dp"
    android:padding="2dp"
    android:layout_height="85dp">

    <ImageView
        android:id="@+id/review_product_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/review_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/review_product_image"
        android:text="Title"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/review_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/review_product_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/review_product_image"
        android:textSize="18dp"
        android:text="price" />


    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/review_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_product_price"
        android:layout_toRightOf="@id/review_product_image"
        android:text="1"
        android:textAlignment="center"
        android:textSize="18dp" />


    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/review_single_item_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="total"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textSize="18dp" />

</RelativeLayout>