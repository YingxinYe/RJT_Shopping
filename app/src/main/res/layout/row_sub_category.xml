<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <RelativeLayout
        android:id="@+id/sub_cat_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/subcategory_image"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:elevation="5dp" />

        <TextView
            android:textColor="@color/peach_pink"
            android:id="@+id/subcategory_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/subcategory_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="title"
            android:textAlignment="center"
            android:textSize="35dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:textColor="@color/peach_pink"
        android:layout_marginTop="10dp"
        android:id="@+id/subcategory_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub_cat_linear"
        android:text="description" />

    <View
        android:background="@color/jellyorange"
        android:layout_margin="10dp"
        android:layout_below="@id/subcategory_description"
        android:layout_width="match_parent"
        android:layout_height="2dp"></View>
</RelativeLayout>